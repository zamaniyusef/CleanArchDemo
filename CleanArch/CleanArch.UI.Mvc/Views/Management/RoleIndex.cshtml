@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "نقش‌ها";
    var i = 1;
}
<a asp-action="RoleCreate" asp-controller="Management" class="btn btn-success mb-3">
    درج نقش جدید
    <span class="iconly iconly-brokenPlus"></span>
</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">
                #
            </th>
            <th scope="col">
                نام
            </th>
            <th scope="col">
                نام فارسی
            </th>
            <th scope="col">
                ویرایش
            </th>
            <th scope="col">
                حذف
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <th scope="row">@(i++)</th>
                <td>@role.Name</td>
                <td>@role.PersianName</td>
                <td>
                    <a class="btn btn-sm btn-warning"
                       asp-action="RoleEdit"
                       asp-controller="Management"
                       asp-route-id="@role.Id">
                        ویرایش
                        <span class="iconly iconly-brokenEdit-Square"></span>
                    </a>
                </td>
                <td>
                    <button type="button" class="btn btn-sm btn-danger">
                        حذف
                        <span class="iconly iconly-brokenDelete"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
