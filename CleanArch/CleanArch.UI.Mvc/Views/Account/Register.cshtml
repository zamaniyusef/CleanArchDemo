@model RegisterViewModel
@{
    ViewData["Title"] = "عضویت";
}

<div class="row">
    <div class="col-4">
        <div class="row align-items-center">
            <form class="col" asp-action="Register" asp-controller="Account" method="post">
                <div class="form-label-group">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="موبایل" autofocus>
                    <label asp-for="PhoneNumber"></label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-label-group">
                    <input asp-for="Password" class="form-control" placeholder="کلمه‌عبور">
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-label-group">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="تکرار کلمه‌عبور">
                    <label asp-for="ConfirmPassword"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-primary btn-lg btn-block" value="ثبت‌نام">
            </form>
        </div>
    </div>
    <div class="col-8 text-center">
        <img src="~/images/keiana.png" height="150" />
        <br />
        <br />
        <div class="h3 text-muted">ما در کنار شما برای بهبود زندگی مردم ایران هستیم</div>
    </div>
</div>